@inproceedings{ WOS:000437355302026,
Author = {Yang, Yang and Ning, Hongyun},
Editor = {{Liu, Y and Zhao, L and Cai, G and Xiao, G and Li, KL and Wang, L}},
Title = {{Block Linked List Index Structure for Large Data Full Text Retrieval}},
Booktitle = {{2017 13TH INTERNATIONAL CONFERENCE ON NATURAL COMPUTATION, FUZZY SYSTEMS
