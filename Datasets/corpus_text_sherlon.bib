@article{ WOS:000470879500004,
Author = {Dowling, Michelle and Wycoff, Nathan and Mayer, Brian and Wenskovitch,
   John and Leman, Scotland and House, Leanna and Polys, Nicholas and
   North, Chris and Hauck, Peter},
Title = {{Interactive Visual Analytics for Sensemaking with Big Text}},
Journal = {{BIG DATA RESEARCH}},
