@article{ WOS:000512296200008,
Author = {Nakamura, Tatsuya and Shirakawa, Masumi and Hara, Takahiro and Nishio,
   Shojiro},
Title = {{Wikipedia-Based Relatedness Measurements for Multilingual Short Text
   Clustering}},
