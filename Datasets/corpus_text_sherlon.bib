@inproceedings{ WOS:000414525400033,
Author = {Grieco, Antonio and Pacella, Massimo and Blaco, Marzia},
Editor = {{Teti, R}},
Title = {{On the application of text clustering in Engineering Change process}},
Booktitle = {{10TH CIRP CONFERENCE ON INTELLIGENT COMPUTATION IN MANUFACTURING
